<%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
  <div>
    Filter by Animal Type
    <%= f.select(
      :with_animal_type,
      @filterrific.select_options[:with_animal_type],
      { include_blank: '- Any -' }
    ) %>
  </div>
  <div>
    <%= link_to('Reset filters',reset_filterrific_url) %>
  </div>
  <%= render_filterrific_spinner %>
  <%= f.submit 'Filter', class: "btn btn-xs btn-primary" %>
<% end %>
<br>
<%= render(partial: 'animals/list', locals: {animals: @animals}) %>