<div class="row">
  <% @animals.each do |animal| %>
    <div class="col-md-2 col-sm-3 col-xs-6">
      <div class="thumbnail">
        <%= image_tag animal.avatar.url(:thumb) %>
        <p>
          <%= link_to animal.name,  animal_path(animal)%><br>
          Type: <%= animal.animal_type %><br>
          Gender: <%= animal.sex %>
        </p>
      </div>
    </div>
  <% end %>
</div>