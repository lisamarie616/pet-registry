<%= image_tag @animal.avatar.url(:medium) %>
<h1><%= @animal.name %></h1>
<p>Type: <%= @animal.animal_type %></p>
<p>Gender: <%= @animal.sex %></p>
<p>Added By: <%= @animal.user.username %></p>
<% if current_user == @animal.user %>
  <%= link_to "Edit", edit_animal_path(@animal), class: "btn btn-sm btn-default" %>
  <%= link_to "Destroy", animal_path(@animal), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-default" %>
<% end %>