<%= bootstrap_form_for @animal do |f| %>
  <%= f.text_field :name, autofocus: true %>
  <%= f.label "Type" %>
  <%= f.text_field :animal_type, hide_label: true %>
  <%= f.label "Gender" %>
  <%= f.text_field :sex, hide_label: true %>
  <%= f.label "Photo" %>
  <%= f.file_field :avatar, hide_label: true %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>